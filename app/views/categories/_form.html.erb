<%= form_for(category) do |f| %>
  <% if category.errors.any? %>
    <ul>
    <% category.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

  <%= submit_tag "Create" %>
<% end %>