<tr>
  <td><%= @category.title %></td>
  <td><%= @category.color %></td>
  <td style="background-color:<%= @category.color %>;"></td>
  <td class="space-evenly">
    <%= link_to edit_category_path(@category) do %>
      <i class="fas fa-edit"></i><p class="visually-hidden">Edit</p>
    <% end %>
    <%= link_to category_path(@category), method: :delete, data: { confirm: 'Are you certain you want to delete this category?' } do %>
      <i class="fas fa-trash"></i><p class="visually-hidden">Delete</p>
    <% end %>
  </td>
</tr>